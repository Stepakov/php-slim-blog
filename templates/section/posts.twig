{% for post in posts %}
    <div class="col col-4">
        <div class="card" style="width: 18rem;">
            <img src="{{ asset_url( 'public/images/' ~ post.image_path ) }}" class="card-img-top" alt="{{ post.title|escape }}">
            <div class="card-body">
                <a href="/{{ post.url_key }}"><h5 class="card-title">{{ post.title|escape }}</h5></a>
                <span>Sasha Skripkin | {{ post.published_date|date("F d, Y") }}</span>
                <p class="card-text">{{ post.description|escape }}</p>
                <a href="{{ url( post.url_key ) }}" class="btn btn-primary">Read more</a>
            </div>
        </div>
    </div>
{% endfor %}